{
  "manifest_version": 3,
  "name": "whatsapp-notification-sound-extension",
  "version": "0.0.1",
  "description": "An extension that allows you to change the notification sound of WhatsApp Web.",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "assets/svg/imgWhatsound_logo_500x500_v1.chunk.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "src/pages/content/index.js"
      ],
      "css": [
        "assets/css/contentStyle.chunk.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "assets/mp3/*.mp3",
        "assets/wav/*.wav"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ]
}